{
  "name": "medjs",
  "version": "0.1.0",
  "description": "JavaScript library for MediBloc",
  "main": "dist-node/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "eslint .",
    "babel": "babel src -d dist-node",
    "browserify": "browserify ./dist-node/index.js -o ./dist-browser/medjs.js -s medjs",
    "build": "npm run babel && npm run browserify && npm run uglify",
    "precommit": "npm run lint",
    "test": "mocha --require babel-core/register --reporter spec test/setup.js",
    "uglify": "uglifyjs -nm -o ./dist-browser/medjs.min.js ./dist-browser/medjs.js"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medibloc/medjs.git"
  },
  "keywords": [
    "medibloc",
    "javascript",
    "library"
  ],
  "author": "MediBloc <dev@medibloc.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/medibloc/medjs/issues"
  },
  "homepage": "https://github.com/medibloc/medjs#readme",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "browserify": "^16.2.0",
    "elliptic": "^6.4.0",
    "key-encoder": "^1.1.6",
    "secp256k1": "^3.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "bitcoinjs-lib": "^3.3.2",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "uglify-es": "^3.3.9"
  }
}
